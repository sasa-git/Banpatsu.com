<%# Image Slider %>

<div id="slides" class="carousel slide carousel-fade" data-ride="carousel">
  <ul class="carousel-indicators">
    <li data-target="#slides" data-slide-to="0" class="active"></li>
    <li data-target="#slides" data-slide-to="1"></li>
    <li data-target="#slides" data-slide-to="2"></li>
  </ul>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag("img_slider/img1.jpg", alt: "img1" ) %>
      <div class="carousel-caption">
        <h1 class="display-2">Banpatsu.com</h1>
        <h3>そうだ、番発に行こう。</h3>
        <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag("img_slider/img2.jpg", alt: "img2" ) %>
    </div>
    <div class="carousel-item">
      <%= image_tag("img_slider/img3.jpg", alt: "img3" ) %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#slides" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#slides" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="center jumbotron">
  <h1>Banpatsu.com へようこそ！</h1>

  <h2>
    このサイトは、「他大学の番発を見に行きたい！」「今度番発をやるから見に来て欲しい！」という方達のための番発イベント情報サイトです。
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<div class="container-fluid padding mb-2">
  <div class="row text-center">
    <div class="col-md-12 col-lg-8 mb-5">
      <h3>番発情報をチェック！</h3>
      <div class="calendar padding ">
        <div id="calendar"></div>
      </div>
      <div class="text-left">
        <% if logged_in? %>
          <%# following users ivents feed %>
          <h3>フォローしているサークルのイベント情報</h3>
          <% if @following_events.any? %>
            <ul class="events mb-3">
              <%= render @following_events %>
            </ul>
            <%= link_to "もっと見る", events_following_user_path(current_user) %>
          <% else %>
            <h5>サークルをフォローすると直近のイベント情報をここに表示できます</h5>
            <%= link_to "サークルを探す", users_path %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-12 col-lg-4 text-left">
      <h3>
        新着情報
        <% if current_user %>
          <span><%= link_to "イベントを作る！", new_event_path, class: "btn btn-success" %></span>
        <% end %>
      </h3>
      <% if @events.any? %>
        <ol class="events">
          <%= render @events %>
        </ol>
      <% end %>
    </div>
  </div>
</div>