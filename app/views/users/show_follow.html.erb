<% provide(:title, @title) %>
<div class="row my-3">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          <%= gravatar_for(@user, size: 50) %>
          <%= link_to @user.circle_name, @user %>
        </h4>
        <p class="card-body py-0">
          <%= truncate @user.profile, length: 80 %>
        </p>
      </div>
    </div>
    <%= render 'shared/stats' %>
    <% if @users.any? %>
      <div class="user_avatars padding">
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, size: 30), user %>
        <% end %>
      </div>
    <% end %>
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow padding">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>