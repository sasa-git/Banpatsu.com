<%= form_for(@user, url: yield(:url)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, "ユーザーID" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, class: "form-control", placeholder: "banpatsu@example.com" %>

  <%= f.label :circle_name, "サークル名" %>
  <%= f.text_field :circle_name, class: "form-control" %>

  <% if params[:action] == "edit" || params[:action] == "update" %>
    <%= f.label :profile, "紹介文" %>
    <%= f.text_area :profile, class: "form-control", rows: "3" %>

    <%= f.label :site_url, "自サイトURL" %>
    <%= f.text_field :site_url, class: "form-control", placeholder: "http|https://example.com" %>

    <%= f.label :twitter_name, "TwitterのID" %>
    <small class="form-text text-muted">Twitterアカウントをお持ちの場合、ID名を入力したらタイムラインが表示できます</small>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">@</div>
      </div>
      <%= f.text_field :twitter_name, class: "form-control" %>
    </div>
  <% end %>

  <hr class="my-4">

  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, "パスワードの確認" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>